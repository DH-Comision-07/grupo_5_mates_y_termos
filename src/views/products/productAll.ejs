<!DOCTYPE html>
<html lang="es">

<head>
    <%- include('../partials/head.ejs') %>
    <title>Productos</title>
    <link rel="stylesheet" href="\css\productAll.css">
    
</head>

<body>
    <%- include('../partials/header.ejs') %>
    
    <main class="main--form">
        <!-- Todos los productos -->
		<h3 class="main__products--titulares">Todos los productos</h3>

		<div class="main--div">
			<% productos.forEach ((product)=>{ %>
				<section class="product-box">
				<a class="product--href" href="productDetail/<%=product.id%>">
					<figure class="product-box_image">
						<% for( let i = 0; i < product.producto.length; i++ ) { %>
							<img class="image__product" id="images" name="images" src="/images/<%= product.producto[i].name %>" alt="<%=product.producto[i].name%>">
							<% } %>
					</figure>
					<h2 class="product-box_data--h2">$<%=product.price %></h2>
					<p class="product-box_data--p"><%=product.name %></p>
				</a>
				</section>
			<% }) %>
		</div>
</main>

    <%- include('../partials/footer.ejs') %>

</body>

</html>