<!-- views/favorites.ejs -->
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Favoritos</title>
    <link rel="stylesheet" href="/css/favorite.css">
</head>
<body>
    <h1>Favoritos</h1>
    <ul>
        <% favorites.forEach(favorite => { %>
            <li>
                <%= favorite.productoFavorit.name %>
                <form action="/users/favorite/<%= favorite.id %>?_method=DELETE" method="POST">
                    <button type="submit">Eliminar</button>
                </form>
            </li>
        <% }) %>
    </ul>
    <form action="/users/favorite/<%=userId%>" method="POST">
        <input type="hidden" name="userId" value="<%=userId%>">
        <input type="number" name="productId" placeholder="Product ID" required>
        <button type="submit">Agregar a Favoritos</button>
    </form>
</body>
</html>